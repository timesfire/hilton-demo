<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".JobDetailActivity">
    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:id="@+id/job_title"
        tools:text="job title"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/job_title"
        android:id="@+id/job_desc"
        android:layout_width="match_parent"
        tools:text="job description"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/company_logo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/company_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/job_desc"
        tools:background="@color/material_dynamic_secondary95" />

    <TextView
        android:id="@+id/company_name"
        android:layout_width="0dp"
        android:layout_marginStart="8dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/company_logo"
        app:layout_constraintTop_toBottomOf="@id/job_desc"
        tools:text="company name" />

</androidx.constraintlayout.widget.ConstraintLayout>