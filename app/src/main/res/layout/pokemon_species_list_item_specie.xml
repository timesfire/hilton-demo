<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:padding="8dp">

    <TextView
        android:id="@+id/species_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/species_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/species_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@id/species_name_title"
        app:layout_constraintTop_toTopOf="@+id/species_name_title"
        tools:text="charmeleon" />

    <TextView
        android:id="@+id/capture_rate_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/capture_rate"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/species_name_title" />

    <TextView
        android:id="@+id/capture_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@id/capture_rate_title"
        app:layout_constraintTop_toTopOf="@+id/capture_rate_title"
        tools:text="12" />


</androidx.constraintlayout.widget.ConstraintLayout>